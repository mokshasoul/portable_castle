exec nextcloud
exec gammastep-indicator
exec keepassxc
exec mako --default-timeout=30
exec autotiling
exec /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1

# exec dropbox
### DEFAULT LINE ON THE BOTTOM
include /etc/sway/config.d/*
